{
  "name": "financas-pro",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "predev": "npm run db:start",
    "dev": "next dev",
    "postdev": "npm run db:stop",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "verify": "npm run lint && npm run typecheck && npm run build",
    "prepare": "husky",
    "db:start": "npx supabase start --workdir infra",
    "db:stop": "npx supabase stop --workdir infra",
    "db:reset": "npx supabase db reset --workdir infra",
    "db:push": "dotenv -e .env.local -- npx supabase db push --workdir infra",
    "db:push:dry": "dotenv -e .env.local -- npx supabase db push --dry-run --workdir infra",
    "db:diff": "dotenv -e .env.local -- npx supabase db diff --workdir infra",
    "db:new": "npx supabase migration new --workdir infra",
    "db:link": "dotenv -e .env.local -- sh -c 'npx supabase link --project-ref \"$SUPABASE_PROJECT_REF\" --workdir infra'",
    "db:status": "npx supabase status --workdir infra",
    "functions:deploy": "dotenv -e .env.local -- npx supabase functions deploy monthly-close --workdir infra"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.88.0",
    "@tanstack/react-form": "^1.28.0",
    "@tanstack/react-query": "^5.90.12",
    "@vercel/analytics": "^1.6.1",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "dayjs": "^1.11.19",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.0.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.0",
    "jsdom": "^28.0.0",
    "lint-staged": "^15.2.10",
    "msw": "^2.12.9",
    "postcss": "^8.4.49",
    "supabase": "^2.19.7",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": ["biome check --write --no-errors-on-unmatched"]
  },
  "overrides": {
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3"
  }
}
